<h1>My Lists</h1> <a href="/task_lists/new">+ Add Task List</a>

<br>

<div class="flash">
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
</div>

<% @task_lists.each do |task_list| %>

  <section class="task-list">
    <h1><%= task_list.name %></h1>
    <%= link_to "Edit", "/task_lists/#{task_list.id}/edit" %>
    <%= link_to "+ Add Task", "/task_lists/#{task_list.id}/tasks/new" %>
  </section>

<% end %>


